@using MbmStore.Models;

@{
    ViewBag.Title = "Index";
}

@helper RenderCustomer(Customer customer) {
    if ("John".Equals(customer.Firstname))
    {
        @customer.Firstname @customer.Lastname @String.Format(" is {0} years old.", customer.Age)<br />
        @String.Format(" ({0})", string.Join(", ", customer.Phonenumbers))<br />
}
else
{
        @customer.Firstname @customer.Lastname @String.Format(" ({0})", string.Join(", ", customer.Phonenumbers))<br />
}
    @customer.Address<br />
    @customer.Zip @customer.City
}

<h2>Index</h2>

<p>
    @RenderCustomer(ViewBag.John)
</p>

<p>
    @RenderCustomer(ViewBag.Maz)
</p>

<p>
    @RenderCustomer(ViewBag.Liz)
</p>
